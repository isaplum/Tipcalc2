<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krixniemann.tipcalc.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Amount"
        android:id="@+id/billAmnt" />

    <TextView
        android:text="Number of People in Party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billAmnt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="148dp"
        android:id="@+id/editTextNumberParty" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNumberParty"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp"
        android:id="@+id/buttonCalc" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCalc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:id="@+id/tvTotalTip" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTotalTip"
        android:layout_marginTop="32dp"
        android:id="@+id/textViewTipPP" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/billAmnt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:id="@+id/billamountedit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/editTextNumberParty"
        android:layout_alignEnd="@+id/billamountedit"
        android:layout_marginTop="18dp"
        android:id="@+id/ppinpartyedit" />
</RelativeLayout>
